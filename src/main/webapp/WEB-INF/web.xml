<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>flights</servlet-name>
        <servlet-class>servlets.AllFlightsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flights</servlet-name>
        <url-pattern>/flightAll</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>route</servlet-name>
        <servlet-class>servlets.RouteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>route</servlet-name>
        <url-pattern>/route</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>city</servlet-name>
        <servlet-class>servlets.CityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>city</servlet-name>
        <url-pattern>/city</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>plane</servlet-name>
        <servlet-class>servlets.PlaneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>plane</servlet-name>
        <url-pattern>/plane</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>typePlane</servlet-name>
        <servlet-class>servlets.TypePlaneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>typePlane</servlet-name>
        <url-pattern>/typePlane</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>MySQL DB Connection Pool</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>